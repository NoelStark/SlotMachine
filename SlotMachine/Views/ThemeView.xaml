<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:SlotMachine.ViewModels"
             x:DataType="vm:ThemeViewModel"
             x:Class="SlotMachine.Views.ThemeView"
             Title="ThemeView">
    <VerticalStackLayout>
        <Button Text="Standard" TextColor="White" Command="{Binding SwitchToStandardCommand}" BackgroundColor="{DynamicResource Primary}"/>
        <Button Text="Desert" TextColor="White" Command="{Binding SwitchToDesertCommand}"/>
    </VerticalStackLayout>
</ContentPage>